{% extends 'default_frame.twig' %}

{% set menus = ['order', 'order_pdf'] %}

{% block title %}Order Pdf Config{% endblock %}
{% block sub_title %}Order Pdf Config{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form method="post" action="{{ url('plugin_OrderPdf_config') }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Order Pdf Config</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body form-horizontal">
                        <div class="form-group">
                            {{ form_label(form.wkhtml_exec_path) }}
                            <div class="col-sm-9 col-lg-10">
                                {{ form_widget(form.wkhtml_exec_path) }}
                                {{ form_errors(form.wkhtml_exec_path) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.timeout) }}
                            <div class="col-sm-9 col-lg-10">
                                {{ form_widget(form.timeout) }}
                                {{ form_errors(form.timeout) }}
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->

            <div class="col-md-3">
                <div class="col_inner" id="aside_column">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" type="submit">設定</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock %}
